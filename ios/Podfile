platform :ios, '15.1'

require 'json'

# Autolinking helpers (Expo + React Native)
require File.join(File.dirname(`node --print "require.resolve('expo/package.json')"`), "scripts/autolinking")
require File.join(File.dirname(`node --print "require.resolve('react-native/package.json')"`), "scripts/react_native_pods")

podfile_properties = JSON.parse(File.read(File.join(__dir__, 'Podfile.properties.json'))) rescue {}

install! 'cocoapods', :deterministic_uuids => false

target 'TheDSPApp' do
  # Auto-detect RN/Pods paths
  config = use_native_modules!

  use_react_native!(
    :path => config[:reactNativePath],
    :hermes_enabled => podfile_properties['ios.useHermes'] == 'true',
    :fabric_enabled => podfile_properties['ios.useFabric'] == 'true'
  )

  # Expo modules
  use_expo_modules!

  post_install do |installer|
    react_native_post_install(
      installer,
      config[:reactNativePath],
      :mac_catalyst_enabled => false,
      :ccache_enabled => podfile_properties['apple.ccacheEnabled'] == 'true',
    )

    # Force modern C++ for fmt (and DoubleConversion) to stop the 'locale' / iterator errors
    installer.pods_project.targets.each do |t|
      if ['fmt', 'DoubleConversion'].include?(t.name)
        t.build_configurations.each do |cfg|
          cfg.build_settings['CLANG_CXX_LANGUAGE_STANDARD'] = 'gnu++20' # if Xcode balks, use 'gnu++17'
          cfg.build_settings['CLANG_CXX_LIBRARY'] = 'libc++'
          cfg.build_settings['CLANG_ENABLE_MODULES'] = 'YES'
        end
      end
    end
  end
end
